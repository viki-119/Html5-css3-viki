        div.circle{display: block;height:100px;width:100px;background:red;border-radius:50px;/*四个圆角值都设置为宽度或高度值的一半*/}
        
        #circle{margin:0 auto;width: 500px;}
        #circle div{transition: all 0.35s;transform:translate(-200px,0px);}
        #circle div:nth-of-type(1){transition-delay: 0.15s}
        #circle div:nth-of-type(2){transition-delay: 0.10s}
        #circle div:nth-of-type(3){transition-delay: 0.05s}
        #circle div:nth-of-type(4){transition-delay: 0.25s}

        div.top-half-circle{height:50px;width:100px;border-radius:50px 50px 0px 0px;background:red;}
        #circle:hover .top-half-circle{transform:translate(0px,0px);}
        div.left-half-circle{height:100px;width:50px;border-radius:0px 50px 50px 0px;background:red;float:left;}
        #circle:hover .left-half-circle{transform:translate(0px,0px);}
        div.right-half-circle{height:100px;width:50px;border-radius:50px 0px 0px 50px;background:red;margin-left: 50px;}
        #circle:hover .right-half-circle{transform:translate(0px,0px);}
        div.bottom-half-circle{height:50px;width:100px;border-radius:0px 0px 50px 50px;background:red;}
        #circle:hover .bottom-half-circle{transform:translate(0px,0px);}

        #oval{height:50px;width:100px;border-radius: 25px 25px 25px 25px;background: red}
    </style>
    </head>
